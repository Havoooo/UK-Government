<% page_title "Feature document" %>

<h2>Feature ‘<%= @feature %>’ within ‘<%= @feature_list %>’</h2>
<p class="warning">
  Warning: changes to features appear instantly on the live site.
</p>
<div class="row">
  <div class="col-md-8">
    <%= form_for @feature, url: [:admin, @featurable, @feature_list, @feature], builder: Whitehall::FormBuilder do |form| %>
      <div class="well">
        <%= form.errors %>
        <%= form.hidden_field :document_id %>
        <%= form.hidden_field :topical_event_id %>
        <%= form.hidden_field :offsite_link_id %>
        <%= form.upload :image, label_text: 'Select a 960px wide and 640px tall image to be shown when featuring' %>
        <%= form.text_field :alt_text, label_text: "Image description (alt text)" %>
        <%= form.save_or_cancel cancel: admin_feature_list_path(@feature_list) %>
      </div>
    <% end %>
  </div>
</div>
