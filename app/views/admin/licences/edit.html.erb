<% page_title "Edit Licence information" %>

<div class="row">
  <section class="col-md-8">
    <%= form_for [:admin, nil, @licence], builder: Whitehall::FormBuilder do |form| %>
      <%= form.text_field :link, label_text: 'Link to licence', required: true %>
      <%= form.text_field :title, label_text: 'Title', required: false %>
      <%= form.text_area :description, label_text: 'Description', rows: 3, required: false %>

      <%= form.label :sector_ids, 'Sectors' %>
      <%= form.select :sector_ids,
                      options_from_collection_for_select(Sector.order(:title), 'id', 'title', selected: @selected_sectors),
                      {},
                      multiple: true,
                      class: 'chzn-select form-control',
                      data: {
                          placeholder: "Choose sectors eventsâ€¦",
                          module: 'track-select-click',
                          track_category: 'sectorSelection',
                          track_label: request.path
                      } %>

      <%= form.label :activity_id, 'Activity' %>
      <%= form.select :activity_id,
                      options_for_select(@activity_options, selected: @licence.activity),
                      {},
                      multiple: false,
                      class: 'chzn-select form-control' %>

      <%= form.check_box :external_link, label_text: 'Is an external link?', required: true %>
      <%= form.save_or_cancel cancel: admin_licences_path %>
    <% end %>
  </section>
</div>
