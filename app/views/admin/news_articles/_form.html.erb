<div class="format-advice">
  <p class="govuk-body"><strong>Use this format for:</strong> Press releases, news stories and responses to media coverage including official statements.</p>

  <p class="govuk-body">Do <em>not</em> use for: promoting the publication of other content (eg statistics).</p>
</div>

<%= standard_edition_form(edition) do |form| %>
  <%= render 'inline_attachments_info', form: form, edition: edition %>
  <%= render "govuk_publishing_components/components/fieldset", {
    legend_text: "Associations",
    heading_level: 3,
    heading_size: "l",
    id: "associations"
  } do %>
    <div class="govuk-!-margin-bottom-4">
      <div class="app-view-edit-edition__appointment-fields">
        <%= render 'appointment_fields', form: form, edition: edition %>
      </div>

      <%= render 'topical_event_fields', form: form, edition: edition %>

      <div class="app-view-edit-edition__world-organisation-fields govuk-!-margin-bottom-4">
        <%= render 'worldwide_organisation_fields', form: form, edition: edition %>
      </div>

      <%= render 'world_location_fields', form: form, edition: edition %>

      <div class="app-view-edit-edition__organisation-fields">
        <%= render 'organisation_fields', form: form, edition: edition %>
      </div>
    </div>
  <% end %>
<% end %>
