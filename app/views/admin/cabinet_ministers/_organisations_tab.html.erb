<% if organisations.many? %>
  <p class="govuk-body">
    <%= link_to "Reorder list", reorder_ministerial_organisations_admin_cabinet_ministers_path, class: "govuk-link" %>
  </p>
<% end %>

<% if organisations.any? %>
  <%= render "govuk_publishing_components/components/table", {
    rows: organisations.map do |organisation|
      [
        {
          text: tag.p(organisation.name, class: "govuk-!-margin-0 govuk-!-font-weight-bold")
        },
      ]
    end
  } %>
<% else %>
  <p class="govuk-body">None</p>
<% end %>
